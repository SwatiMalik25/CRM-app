{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@repo/*": ["../*"],
      "@repo/design-system/*": ["./*"],
      "@repo/typescript-config/*": ["../typescript-config/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.css"],
  "exclude": ["node_modules"]
}