{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
      "plugins": [{ "name": "next" }],
      "module": "ESNext",
      "moduleResolution": "node",
      "types": ["react", "react-dom"],
      "allowJs": true,
      "jsx": "preserve",
      "noEmit": true,
      "paths": {
        "@/*": ["./*"],
        "@repo/*": ["../../packages/*"]
      }
    },
    "exclude": ["node_modules"]
}